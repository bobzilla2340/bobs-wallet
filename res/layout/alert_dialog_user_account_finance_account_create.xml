<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditText
        android:id="@+id/alertDialogUserFinanceAccountNameEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/user_account_alert_dialog_account_create_hint" />
    
    <EditText
        android:id="@+id/alertDialogUserFinanceAccountIntrestRateEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_below="@id/alertDialogUserFinanceAccountNameEditText"
        android:hint="@string/user_account_alert_dialog_interest_rate_hint" />

</RelativeLayout>
