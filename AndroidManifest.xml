<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs2340.bobzilla.bobs_wallet"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="cs2340.bobzilla.bobs_wallet.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="cs2340.bobzilla.bobs_wallet.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="cs2340.bobzilla.bobs_wallet.WelcomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cs2340.bobzilla.bobs_wallet.WelcomeActivity" />

            <intent-filter>
                <action android:name="android.intent.category.VIEW" />
                <category android:name="android.intent.category.LOGIN_ACTIVITY_INTENT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="cs2340.bobzilla.bobs_wallet.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:parentActivityName="cs2340.bobzilla.bobs_wallet.WelcomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cs2340.bobzilla.bobs_wallet.WelcomeActivity" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.REGISTRATION_ACTIVITY_INTENT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="cs2340.bobzilla.bobs_wallet.UserAccountActivity"
            android:label="@string/title_activity_user_account"
            android:parentActivityName="cs2340.bobzilla.bobs_wallet.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cs2340.bobzilla.bobs_wallet.LoginActivity" />
            
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.USER_ACCOUNT_ACTIVITY_INTENT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
